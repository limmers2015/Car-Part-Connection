# Server
PORT=8080
APP_ENV=dev
LOG_JSON=true
SESSION_TTL_SECONDS=604800   # 7 days

# Postgres
PGHOST=localhost
PGPORT=5432
PGDATABASE=cpc
PGUSER=cpc
PGPASSWORD=cpc_password
# If using sockets, you can omit host/port.

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0

# Session cookie
SESSION_COOKIE_NAME=cpc_session
SESSION_COOKIE_SECURE=false     # true in prod behind TLS
SESSION_COOKIE_SAMESITE=Lax     # Lax | Strict | None
